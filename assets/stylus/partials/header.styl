#header
    background-color: white
    height 8rem
    z-index 999
    font-family: $font1
    font-weight: bold
    @media(max-width: 767px)
        height: 100vh
        position fixed
    .header-mobile
        display none
        height 3rem
        position fixed
        top 0
        left 0
        z-index 995
        box-shadow 0px 0px 5px black
        line-height 3rem
        background-color white
        transition all 400ms ease-in-out
        size(100)
        @media(max-width:767px)        
            display block        
        .switch
            size(20)
            text-align center
            .menu-switch
                text-align center
                z-index 1000
                background-color transparent 
                border none 
                .fa
                    font-size: 30px
                    line-height: 3rem
                    z-index 1000
                    display block
                    position fixed
                    left 5%
        .mobile-logo
            size(60)
            text-align center
            img 
                width auto
                max-height 2.9rem
    


.header-party
    size(100)
    @media(max-width: 767px)
        position fixed
        top 0
        left -100%
        size(75)
        height 100vh
        z-index 999
        background-color black    
        box-shadow 0px 1px 5px black
        @media(max-width: 767px)
            background-color: $color2
        &:before
            content " "
            background-color white
            position absolute
            top 0
            left 0
            size (100)
            height 3rem    
    .header-info-party
        size(100)
        .container
            .header-first-line
                .header-home
                    display block
                    text-align left
                    img 
                        max-height 5rem
                        width auto
                    @media(max-width: 767px)
                        size(100)
                        padding 0 !important 
                        text-align center
                    .logo-desktop
                        max-width 100%
                        margin auto
                        max-height: 5rem
                        @media(max-width: 767px)
                            max-height: 3rem
                .header-info
                    height 5rem
                    @media(max-width: 767px)
                        width 100%
                        float left
                        padding 0 15px 20px 50px !important
                        height auto !important
                    .header-info-item
                        text-decotation none
                        size(100)
                        line-height 2.5rem
                        font-size 15px
                        position relative
                        color $color1
                        @media(max-width: 767px)
                            line-height: 1rem
                            padding-top 10px
                            color white

                        &:hover
                            color inherit
                        i 
                            font-size 20px
                            position absolute
                            top 0.75rem
                            @media(min-width: 768px)
                                right 101%
                            @media(max-width: 767px)
                                left -35px
                            
                    .header-info-phone, .header-info-mail
                            color $color2
                            @media(min-width: 768px) and (max-width:1199px)
                                size(50)
                            @media(min-width:1200px)
                                size(35)
                            @media(max-width: 767px)
                                size(100)
                                color white

                    


                    
    .fixed-header
        position: fixed
        top 0
        left 0

    .header-menu-party
        background-color $color2
        z-index 999
        display block
        size(100)
        
        @media(max-width: 767px)
            transition all 400ms ease-in-out
            position relative
            &:after
                content " "
                width 64vw
                height 1px 
                position absolute
                left 15px
                top 0px
                background-color $color1

        .header-second-line
            display block            
            color white
            no-padding(0,0)
            @media(max-width: 767px)
                size(100)
                padding 0 15px 20px 50px !important
            .header-menu-options
                list-style none
                padding 0px !important 
                margin 0px !important 
                line-height: 3rem
                height: 3rem
                @media(max-width: 767px)
                    size(100)
                    
                            
                .header-menu-option
                    text-align center
                    display inline-block
                    position relative
                    size(16.666)
                    no-padding(0,0)
                    
                    @media(max-width: 767px)
                        size(100) 
                        text-align left
                        padding 0 !important
                    
                    a
                        display: block  
                        size(100)
                        &:hover
                            text-decoration: none 
                            color inherit
                        @media(max-width 1000px) and (min-width 768px)
                            font-size: 15px
                        @media(max-width: 767px)
                            font-size 20px
                            &:after
                                content " "
                                position absolute
                                left -50px
                                bottom 0
                                width 10px
                                height 1px
                                border-right solid $color1 64vw
                        .fa
                            @media(max-width: 767px)
                                position absolute
                                top 1.1rem
                                left -30px
                .active
                    transition all 250ms ease-in-out
                    &:after
                        content " "
                        size(100)
                        height: 5px
                        background-color $color1
                        position absolute
                        bottom 0px
                        left 0px
                        transition all 250ms ease-in-out
                        @media(max-width: 767px)
                            width: 10px
                            height 1px
                            position absolute
                            left -50px
                            bottom 0
                            border-top solid $color1 3rem


                    
    a
        text-decoration: none
        color inherit
        &:hover
            text-decoration: none
.rollback
    transition: all 250ms ease-in-out
    z-index -1
    opacity 0
.rollback-area
    position fixed
    top 0
    left 0
    height: 100vh
    width: 100vw
    background-color alpha(black 50%)
    z-index 997
    opacity 1
    display block
.header-actived
    left 0
    transition all 400ms ease-in-out
.disable
    position absolute
    left: 0px
    line-height 3rem
    top 0
    border-radius 50%
    font-size: 1.60em
    z-index 1500
    padding .75rem 20px
    display none
    @media(min-width: 768px)
        display none !important 
        opacity 0 !important


